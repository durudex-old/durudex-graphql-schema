"""
Post type.
"""
type Post implements Node {
  """
  Post id.
  """
  id: ID!

  """
  User author id.
  """
  authorId: ID!

  """
  Post text.
  """
  text: String!

  """
  Post created date.
  """
  createdAt: Timestamp!

  """
  Post updated date.
  """
  updatedAt: Timestamp
}

extend type Query {
  """
  Get post by id.
  """
  getPost(id: ID!): Post
}

extend type Mutation {
  """
  Create a new user post.
  """
  createPost(input: CreatePostInput!): ID! @isAuth

  """
  Delete user post.
  """
  deletePost(id: ID!): Boolean! @isAuth
}

"""
Create post input.
"""
input CreatePostInput {
  """
  Post text.
  """
  text: String!
}
