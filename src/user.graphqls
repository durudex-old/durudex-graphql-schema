"""
User type.
"""
type User implements Node {
  """
  User id.
  """
  id: ID!

  """
  Username.
  """
  username: String!

  """
  User created date.
  """
  createdAt: Timestamp!

  """
  User last visit date.
  """
  lastVisit: Timestamp!

  """
  User verified status.
  """
  verified: Boolean!

  """
  User avatar url.
  """
  avatarUrl: String
}

extend type Query {
  """
  Getting me.
  """
  me: User! @isAuth

  """
  Getting user.
  """
  user(id: ID!): User
}

extend type Mutation {
  """
  User Sign Up
  """
  signUp(input: SignUpInput!): ID!

  """
  Creating a new verification code to email.
  """
  createVerifyEmailCode(email: String!): Boolean!

  """
  Forgot user password.
  """
  forgotPassword(input: ForgotPasswordInput!): Boolean!

  """
  Update user avatar.
  """
  updateAvatar(file: Upload!): String! @isAuth
}

"""
User Sign Up input.
"""
input SignUpInput {
  """
  Account username.
  """
  username: String!

  """
  User email.
  """
  email: String!

  """
  User password.
  """
  password: String!

  """
  User verification code.
  """
  code: Uint64!
}

"""
Forgot user password input.
"""
input ForgotPasswordInput {
  """
  User email.
  """
  email: String!

  """
  New user password.
  """
  password: String!

  """
  User verification code.
  """
  code: Uint64!
}
