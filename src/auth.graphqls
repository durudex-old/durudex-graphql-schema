extend type Mutation {
  """
  User Sign Up
  """
  signUp(input: SignUpInput!): Uint64! @emailCode

  """
  User Sign In.
  """
  signIn(input: SignInInput!): Tokens!

  """
  Refresh authorization tokens.
  """
  refreshTokens(input: RefreshTokensInput!): Tokens!

  """
  Logout user session by refresh token.
  """
  logout(input: RefreshTokensInput!): Boolean! @auth
}

"""
User Sign Up input.
"""
input SignUpInput {
  username: String!
  email: String!
  password: String!
}

"""
User Sign In input.
"""
input SignInInput {
  username: String!
  password: String!
}

"""
Authorization refresh token input.
"""
input RefreshTokensInput {
  """
  Refresh token.
  """
  token: String!
}
